<Window x:Class="FotoSortIva02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FotoSortIva02"
        mc:Ignorable="d"
        xmlns:VM="clr-namespace:FotoSortIva02.ViewModel"
        Title="Foto Sorting Ver.02" Height="480" Width="640"  WindowStartupLocation="CenterScreen" Background="#FF84BEBF" d:DesignWidth="653.227">
    <Grid Margin="2,0,1.6,0.4" HorizontalAlignment="Left" Width="638">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--
        
        -->
        <ProgressBar x:Name="ProgressBarStatus"
        Value="{Binding Progress}" 
        Maximum="{Binding Maximum}" 
        Minimum="{Binding Minimum}"
        Grid.Row="9" Grid.ColumnSpan="2" Grid.Column="1" Margin="0,0,10,0"/>

        <TextBlock Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="5" Grid.Column="1" Text="Welcome to Foto Sorting Application" FontSize="22" FontWeight="Bold" Foreground="#FF0C0811" />

        <TextBlock Grid.Row="3" Grid.ColumnSpan="3" Grid.Column="3" Text="Location of your Files" FontSize="16" FontWeight="Bold" Foreground="#FF0C0811" />

        <Button Command="{Binding ScanButtCommand}" Grid.Column="0" Grid.Row="4" Content="Scan Folder"/>
        <TextBox x:Name="TextBoxScanFolder" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,10,0"
        TextWrapping="Wrap" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto"
        Text="{Binding TextBoxScanFolder}"></TextBox>

        <Button Command="{Binding CreateButtCommand}" Grid.Column="0" Grid.Row="6" Content="New Folder"/>
        <TextBox x:Name="TextBoxNewFolder" Grid.Row="6" Grid.Column="1"  Grid.ColumnSpan="2" Margin="0,0,10,0"
        TextWrapping="Wrap" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto"
        Text="{Binding TextBoxNewFolder}"></TextBox>

        <TextBlock Text="Status of App : " Grid.Column="0" HorizontalAlignment="Right" Grid.Row="8" VerticalAlignment="Top" FontSize="15" />
        <TextBox x:Name="TextBoxStatus" Grid.Row="8" Grid.Column="1"  Grid.ColumnSpan="2" Margin="0,0,10,0"
        TextWrapping="Wrap" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto"
        Text="{Binding TextBoxStatus}"></TextBox>

        <TextBlock Text="Qnt.files : " Grid.Column="3" HorizontalAlignment="Right" Grid.Row="2" VerticalAlignment="Top" FontSize="15" />

        <TextBox x:Name="TextBoxFotoCounter" Grid.Row="2" Grid.Column="4"  
        TextWrapping="Wrap" AcceptsReturn="True" HorizontalScrollBarVisibility="Disabled"
        Text="{Binding TextBoxFotoCounter}"></TextBox>


        <TextBox x:Name="TextBoxGenShow" Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="3" Grid.RowSpan="9"
        TextWrapping="Wrap" AcceptsReturn="True" HorizontalScrollBarVisibility="Disabled"
        Text="{Binding TextBoxGenShow}"
        VerticalScrollBarVisibility="Auto"></TextBox>

        <Button Command="{Binding StartButtCommand}" Grid.Column="5
                " Grid.Row="13" Content="StartProcess"/>

        <Button Command="{Binding LogButtCommand}" Grid.Column="3"
                Grid.Row="13" Content="Log file"/>

        <Button Command="{Binding ExitButtCommand}" Grid.Column="5" Grid.Row="15" Height="20" Content="Exit"/>



    </Grid>
</Window>